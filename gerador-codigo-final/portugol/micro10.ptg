algoritmo "micro10"

{
	Função : Fatorial recursivo
}
var
	numero: inteiro;
	fat: inteiro;
funcao fatorial(n: inteiro) : inteiro
var
inicio
	se n <= 0 entao
		retorne 1;
	senao
		retorne n * fatorial(n - 1);
	fimse
fimfuncao

inicio
	escreva("Digite um numero: ");
	leia(numero);
	fat <- fatorial(numero);
	escreva("O fatorial de ");
	escreva(numero);
	escreva(" e ");
	escreval(fat);
fimalgoritmo

